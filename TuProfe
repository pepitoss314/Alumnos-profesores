<body>
  <header>
    <h1>Clases Particulares - Comunidad</h1>
    <p>Conectá con alumnos y exalumnos que ofrecen apoyo escolar</p>
  </header>

  <main>
    <!-- Filtros -->
    <div class="filters">
      <input type="text" id="searchInput" placeholder="Buscar profesor...">
      <select id="filterSelect">
        <option value="">Todas las materias</option>
        <option value="Matemática">Matemática</option>
        <option value="Lengua">Lengua</option>
        <option value="Inglés">Inglés</option>
        <option value="Instrumentos">Instrumentos</option>
      </select>
    </div>

    <!-- Lista de profesores -->
    <div class="teacher-list" id="teacherList"></div>
  </main>

  <script>
    const teachers = [
      {
        name: "Juan Pérez",
        subject: "Matemática",
        description: "Estudiante de ingeniería, doy clases de álgebra y análisis para secundaria.",
        whatsapp: "5491123456789",
        email: "juanperez@example.com"
      },
      {
        name: "María González",
        subject: "Lengua",
        description: "Profesora recibida, apoyo en gramática, redacción y comprensión lectora.",
        whatsapp: "5491133344455",
        email: "maria.g@example.com"
      },
      {
        name: "Lucía Romero",
        subject: "Inglés",
        description: "Nivel avanzado C1, clases dinámicas de conversación y preparación de exámenes.",
        whatsapp: "5491144455566",
        email: "luciar@example.com"
      },
      {
        name: "Pedro Sánchez",
        subject: "Instrumentos",
        description: "Clases de guitarra y piano desde nivel inicial hasta avanzado.",
        whatsapp: "5491155566677",
        email: "pedros@example.com"
      }
    ];

    const teacherList = document.getElementById("teacherList");
    const searchInput = document.getElementById("searchInput");
    const filterSelect = document.getElementById("filterSelect");

    function renderTeachers() {
      const searchText = searchInput.value.toLowerCase();
      const filterValue = filterSelect.value;

      teacherList.innerHTML = "";

      teachers
        .filter(t => 
          (t.name.toLowerCase().includes(searchText) || t.subject.toLowerCase().includes(searchText)) &&
          (filterValue === "" || t.subject === filterValue)
        )
        .forEach(t => {
          const card = document.createElement("div");
          card.className = "teacher-card";
          card.innerHTML = `
            <h3>${t.name}</h3>
            <p><strong>Materia:</strong> ${t.subject}</p>
            <p>${t.description}</p>
            <div class="contact">
              <a href="https://wa.me/${t.whatsapp}" target="_blank">WhatsApp</a>
              <a href="mailto:${t.email}">Email</a>
            </div>
          `;
          teacherList.appendChild(card);
        });
    }

    searchInput.addEventListener("input", renderTeachers);
    filterSelect.addEventListener("change", renderTeachers);

    renderTeachers(); // carga inicial
  </script>
</body>
